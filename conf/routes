# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.TopController.top()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /run                        controllers.NumplaController.numplaReciever()
GET     /numpla                     controllers.NumplaController.numpla()

GET     /shirokuro                  controllers.ShirokuroController.shirokuro()
POST    /put                        controllers.ShirokuroController.playerPutStone()
POST    /com                        controllers.ShirokuroController.comPutStone()

GET     /registration               controllers.RegistrationController.registration()
POST    /regist                     controllers.RegistrationController.registUser()

POST    /login                      controllers.LoginController.isUserAuthSucceed()
